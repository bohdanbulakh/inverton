{
  "name": "inverton",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc",
    "test:unit": "jest -c jest.unit.config.ts",
    "test:integration": "jest -c jest.integration.config.ts --runInBand --forceExit",
    "dev": "node --loader ts-node/esm src/index.tsx",
    "start": "node --loader ts-node/esm src/cli/commands/start.tsx",
    "index": "node --loader ts-node/esm src/cli/commands/index.tsx",
    "search": "node --loader ts-node/esm src/cli/commands/search.tsx",
    "bench:queue": "ts-node src/bench/queue-throughput.ts",
    "bench:query": "tsc && node dist/bench/query-latency"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "ink": "^4.1.0",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.0.0",
    "ink-text-input": "^5.0.0",
    "ioredis": "^5.8.1",
    "meow": "^11.0.0",
    "react": "^18.2.0",
    "stopwords-iso": "^1.1.0",
    "tsconfig-paths": "^4.2.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.32",
    "@types/unzipper": "^0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vdemedes/prettier-config": "^2.0.1",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^30.2.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "xo": "^0.53.1"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    }
  },
  "prettier": "@vdemedes/prettier-config",
  "packageManager": "yarn@4.10.3"
}
